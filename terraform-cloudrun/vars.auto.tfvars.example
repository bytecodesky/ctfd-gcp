# GCP Project ID - REQUIRED
project_id = "your-gcp-project-id"

# GCP region for Cloud Run, Cloud SQL, Redis, etc.
region = "us-central1"

# GCS bucket location (US, EU, ASIA, etc.)
bucket_location = "US"

# VPC subnet CIDR range
main_subnet_cidr = "10.0.0.0/24"

# Serverless VPC Access connector CIDR range
access_connector_cidr = "10.8.0.0/28"

# Domain name for CTFd deployment
domain = "ctf.qnqsec.team"

# Prefix for GCS bucket names
s3_bucket_prefix = "ctfd"

# CTFd Cloud Run configuration
ctfd = {
  # Container image from Artifact Registry (update after building image)
  image         = "us-central1-docker.pkg.dev/your-gcp-project-id/ctfd/ctfd:latest"
  min_instances = 0
  max_instances = 100
  cpu           = "1"
  memory        = "1Gi"
  concurrency   = 70
  theme         = "qnqsec"
}

# Cloud SQL Postgres configuration
db = {
  tier    = "db-custom-2-7680"  # 2 vCPU, 7.5 GB RAM
  version = "POSTGRES_15"
  disk_gb = 10
}

# Memorystore Redis configuration
redis = {
  tier    = "STANDARD_HA"  # Regional HA
  size_gb = 1
}
